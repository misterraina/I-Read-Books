{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    },
    {
      "src": "api/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "postgres://default:udWqRrgkfQ41@ep-black-frog-a1ohrdtn-pooler.ap-southeast-1.aws.neon.tech:5432/verceldb?sslmode=require"
  }
}
